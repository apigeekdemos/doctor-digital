<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="HPX_Fault_TargetErrors">
    <DisplayName>Fault_TargetErrors</DisplayName>
    <FaultRules/>
    <Properties/>
    <Set>
        <Payload contentType="application/json" variablePrefix="%" variableSuffix="#">
          {
            "resourceType": "OperationOutcome",
            "text": {
            "status": "generated",
            	"div":"<div>
                <h1>Operation Outcome</h1>
                <table border="0">
                    <tr>
                        <td style="font-weight: bold;">error</td>
                        <td>[]</td>
                        <td>
                            <pre>%errorMessage#</pre>
                        </td>\n\t\t\t</tr>\n\t\t</table>\n\t</div>"
            },
            "issue": [
              {
                "severity": "error",
                "code": "%code#",
                "details": "%errorMessage#"
              }
            ]
          }
      	</Payload>
        <StatusCode>{response.status.code}</StatusCode>
        <ReasonPhrase>{response.reason.phrase}</ReasonPhrase>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</AssignMessage>
