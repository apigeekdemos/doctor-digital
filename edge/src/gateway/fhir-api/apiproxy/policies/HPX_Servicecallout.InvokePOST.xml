<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="true" enabled="true" name="HPX_Servicecallout.InvokePOST">
    <DisplayName>Servicecallout.InvokePOST</DisplayName>
    <FaultRules/>
    <Properties/>
    <Request clearPayload="false" variable="invokeConnectorAPIRequest">
        <Set>
            <Headers>
                <Header name="Accept">{request.header.Accept}</Header>
                <Header name="Content-Type">{request.header.Content-Type}</Header>
                <Header name="If-None-Exist">{request.header.If-None-Exist}</Header>
            </Headers>
            <Payload>{request.content}</Payload>
            <Verb>{request.verb}</Verb>
        </Set>
        <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    </Request>
    <Response>invokeConnectorAPIResponse</Response>
    <HTTPTargetConnection>
        <Properties/>
        <URL>https://{connector_domain}/{connector_basepath}{proxy.pathsuffix}?{request.querystring}</URL>
    </HTTPTargetConnection>
</ServiceCallout>
